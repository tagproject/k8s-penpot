{
  "name": "k8s-penpot",
  "version": "1.0.0",
  "description": "Deploy Penpot with ArgoCD and Kustomization",
  "license": "MIT",
  "homepage": "https://github.com/tagproject/k8s-penpot#readme",
  "author": {
    "name": "Daniil Ryazanov",
    "email": "opensource@tagproject.ru"
  },
  "keywords": [
    "penpot",
    "argocd",
    "deploy",
    "kubernetes",
    "kustomization"
  ],
  "bugs": "https://github.com/tagproject/k8s-penpot/issues",
  "type": "commonjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tagproject/k8s-penpot.git"
  },
  "os": [
    "linux"
  ],
  "scripts": {
    "generate": "npm-run-all generate:*",
    "generate:changelog": "node --experimental-specifier-resolution=node node_modules/.bin/changelog generate --bump",
    "lint": "npm-run-all lint:*",
    "lint:spell": "cspell -c .vscode/cspell.json --no-summary \"**/*.{js,ts,tsx,md,yml,json}\"",
    "prepare": "npm-run-all prepare:*",
    "prepare:config": "node --experimental-specifier-resolution=node node_modules/.bin/base-shared-config",
    "prepare:docs": "node --experimental-specifier-resolution=node node_modules/.bin/docs-shared-config",
    "prepare:husky": "husky install",
    "prepare:vscode": "node --experimental-specifier-resolution=node node_modules/.bin/vscode-shared-config",
    "release": "npm-run-all prepare lint generate"
  },
  "devDependencies": {
    "@tagproject/docs-shared-config": "^1.0.4",
    "@tagproject/k8s-manifest-shared-config": "^1.2.0",
    "@tagproject/vscode-shared-config": "^2.0.2",
    "changelog-guru": "^4.0.6",
    "cspell": "^6.14.1",
    "husky": "^8.0.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1"
  }
}
